<div class="input-contents">
  <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <h3 class='form-header-text'>
        ユーザー情報入力
      </h3>
    </div>

    <%= render 'shared/error_messages', model: f.object %>  

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">名前</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :name, class:"input-default", id:"name", placeholder:"例) 山田　一郎", maxlength:"40" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">入社年/月</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.month_field :joined, class:'input-default', id:"joined", min:Time.new(2000, 4), max:Time.now %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード(確認)</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
    <div class="input-btn-contents">
      <%= f.submit "新規登録", class:"input-btn", id:"input-btn"%>
      <%=link_to 'もどる', root_path, class:"back-btn",id:"back-btn" %>
    </div>

  </div>
  <% end %>
</div>
