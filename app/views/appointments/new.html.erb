<%= render "shared/header" %>
<div class="appt-input-contents">
  <div class="appt-input-main">
    <h2 class="appt-input-title">アポイント情報追加</h2>
    <%= form_with model: @appointment, url: appointments_path, method: :post, id:"form" do |f| %>

    <%# <%= render 'shared/error_messages', model: f.object %>

    <%# 情報入力フォーム %>
    <div class="new-appt">
      <div class="weight-bold-text">
        社名
        <br><%= f.text_area :company, class:"appt_content", id:"content", placeholder:"株式会社〇〇" %>
      </div>
      <div class="weight-bold-text">
        約束日
        <br><%= f.date_field :appt_date, id:"content", class:"appt_content" %>
      </div>
      <div class="weight-bold-text">
        チェック項目
         <br><select class="appt_content" name="[check_id]" >
       <option>チェックリストを選択してください</option>
         <% Check.all.each do |check| %>
            <option id="checklist" value=<%= check.id %>><%= check.title %></option>
          <% end %>
        </select>
      </div>
       <div class="input-btn-contents">
         <%= f.submit "登録", class:"appt-input-btn", id: "submit" %>
       </div>
    </div>
    <%# 情報入力フォーム %>
    <% end %>
  </div>
</div>

<%# アポ一覧 %>
<table class='table-lists' >
<tr class="company-lists"><th colspan="6">個社リスト</th></tr>
  <tr class='company-list'>
    <th><%="約束日" %></th><th><%="社名" %></th><th><%="結論" %></th><th><%="点数" %></th><th><%="編集" %></th><th><%="削除" %></th>
  </tr>
  <% @appointment.each do |appointment| %>
  <tr class="list", id="list">
      <td><%= appointment.appt_date %></td>
      <td><%= appointment.company %></td>
      <td><%= appointment.result.name if appointment.result %></td>
      <td><%= appointment.score %>点</td>
      <td><%= link_to image_tag('pen.jpg', :size => '20x20' ), edit_appointment_path(appointment.id), class: "appt-red-btn" %></td>
      <td><%= link_to image_tag('gomi.jpg', :size => '20x20' ), appointment_path(appointment.id), method: :delete, class: "delete-btn"%>
      </td>
  </tr>
<% end %>
</table>
<%# アポ一覧 %>


<%= render "shared/footer" %>
