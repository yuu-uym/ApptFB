        <tr><td><%= @appointment.check.item20%></td><td><%=@appointment.point20 %>点</td></tr>
      </table>

      <div class="weight-bold-text">
        振り返り
      <div>
       <div class="m-comment"><%= @appointment.comment%></div>
      </div>


      <div class="input-btn-contents">
        <%=link_to 'もどる', new_appointment_path, class:"back-btn" %>
      </div>

      <% end %> 
    </div>
  </div>

  <%= render "shared/footer" %>
</div>
