        <tr><td><%= @appointment.check.item5%></td><td><%=@appointment.point5 %>点</td></tr>
        <tr><td><%= @appointment.check.item6%></td><td><%=@appointment.point6 %>点</td></tr>
        <tr><td><%= @appointment.check.item7%></td><td><%=@appointment.point7 %>点</td></tr>
        <tr><td><%= @appointment.check.item8%></td><td><%=@appointment.point8 %>点</td></tr>
        <tr><td><%= @appointment.check.item9%></td><td><%=@appointment.point9 %>点</td></tr>
        <tr><td><%= @appointment.check.item10%></td><td><%=@appointment.point10 %>点</td></tr>
        <tr><td><%= @appointment.check.item11%></td><td><%=@appointment.point11 %>点</td></tr>
