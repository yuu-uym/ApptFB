<div class="relative">
  <%= render "shared/header" %>

  <div class="input-contents">  
    <div class="input-main">
      <h2 class="input-title"><%= @appointment.company %></h2>
   
      <%# アポ情報登録 %>
      <div class="new-appt">
        <div class="weight-bold-text">
          約束日:
          <%=  @appointment.appt_date %>
        </div>
      <div class="weight-bold-text">
        点数
        <%= @appointment.score %>点
      </div>
      </div>

      

      <div class="weight-bold-text">
        振り返り
      <div>
       <div class="m-comment"><%= @appointment.comment%></div>
       <div class="weight-bold-text">
       上長コメント
       </div>
      <div class="m-comment"><% unless @evaluation.nil? %><%=  @evaluation.comment%><%end%></div>
      </div>
      
      <div class="input-btn-contents">
        <%=link_to 'もどる', :back, class:"back-btn" %>
      </div>

    </div>
  </div>

  <%= render "shared/footer" %>
</div>
