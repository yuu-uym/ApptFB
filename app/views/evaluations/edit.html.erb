<div class="relative">
  <%= render "shared/header" %>

  <div class="input-contents">  
    <div class="input-main">
      <h2 class="input-title"><%= @appointment.company %></h2>
      <%= form_with model: @evaluation, url: appointment_evaluation_path(@appointment.id,@evaluation.appointment_id), local: true do |f| %>

