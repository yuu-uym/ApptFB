      <div class="weight-bold-text">
        コメント
      <div>
      <br> <%= f.text_area :comment, class:"appt_comment", id:"content"%>
      </div>


      <div class="input-btn-contents">
        <%= f.submit "更新", class:"appt-input-btn" %>
